---
// Props interface
interface Props {
  title?: string;
  description?: string;
}

// Default values for props
const { 
  title = "Welcome to Astro", 
  description = "A modern static site builder with support for multiple frameworks like React"
} = Astro.props;
---

<div class="welcome-container">
  <div class="welcome-content">
    <h1>{title}</h1>
    <p>{description}</p>
  </div>
</div>

<style>
  .welcome-container {
    margin: 4rem 0;
    padding: 2rem;
    background: linear-gradient(45deg, #4f39fa, #da62c4);
    border-radius: 1rem;
    color: white;
    text-align: center;
  }

  .welcome-content {
    max-width: 800px;
    margin: 0 auto;
  }
</style>
